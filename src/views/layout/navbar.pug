header.main-header
    nav.main-header__nav
      ul.main-header__item-list
        li.main-header__item
          a(href="/", class={active : path === '/'}) shop
        li.main-header__item
          a(href="/products", class={active : path === '/products'}) products
        if isLogin
          li.main-header__item
            a(href="/cart", class={active : path === '/cart'}) cart
          li.main-header__item
            a(href="/order", class={active : path === '/order'}) order
          li.main-header__item
            a(href="/admin/add-product",class={active: path === '/admin/add-product'}) product
          li.main-header__item
            a(href="/admin/products",class={active: path === '/admin/products'}) admin product
      ul.main-header__item-list
        if !isLogin
          li.main-header__item
            a(href="/login" class={active : path === '/login'}) Login
          li.main-header__item
            a(href="/signup" class={active : path === '/signup'}) Signup
        else
          li.main-header__item
            form(action="/logout" method="post")
              input(type="hidden" name="_csrf" value=csrfToken)
              button(type="submit") logout